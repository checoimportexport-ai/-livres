import React, { useEffect, useState } from 'react';

function Match() {
  const [match, setMatch] = useState(null);

  useEffect(() => {
    fetch('https://teu-backend-url.com/match')
      .then((res) => res.json())
      .then((data) => setMatch(data));
  }, []);

  return (
    <div>
      <h2>Match Encontrado</h2>
      {match ? (
        <p>VocÃª combinou com {match.match} â€” Compatibilidade: {match.compatibility}</p>
      ) : (
        <p>Procurando match...</p>
      )}
    </div>
  );
}

export default Match;
from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware

app = FastAPI()

app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],
    allow_methods=["*"],
    allow_headers=["*"],
)

@app.get("/match")
def get_match():
    return {"match": "Joana", "compatibility": "92%"}

@app.post("/login")
def login(user: dict):
    return {"status": "success", "user": user["email"]}
